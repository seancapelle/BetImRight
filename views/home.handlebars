<script type="text/javascript">
    jQuery(function($) {
    $(document).ready( function() {
        $('.navbar-wrapper').stickUp();
        });





          $(function(){
            $('#future_date').countdowntimer({
              dateAndTime : "2018/01/01 00:00:00",
